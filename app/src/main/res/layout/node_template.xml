<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/countdownId_0"
    style="@style/countdownNode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_shadow_rectangle"
    android:onClick="onClick"><!-- android:background="@android:drawable/dialog_holo_light_frame" -->
    <!-- Only add this programmatically: android:tag="COUNTDOWN_0"-->

    <TextView
        android:id="@+id/countdownTitle"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/node_countdownTitleError404" />
    <TextView
        android:id="@+id/countdownDescription"
        style="@style/text"
        android:textSize="15sp"
        android:text="@string/node_countdownDescriptionError404"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/countdownTitle"/>

    <!-- IMPORTANT: If you change IDs of those buttons you need to adapt MainActivity.java:onCountdownModifyButtons() method! -->
    <ImageButton
        android:contentDescription="MotivateMeToggle"
        android:onClick="onCountdownModifyButtons"
        android:id="@+id/countdownMotivateMeToggle"
        android:src="@drawable/switchtoggle_16px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!-- @null as background for transparency -->
    <ImageButton
        android:id="@+id/countdownEdit"
        android:onClick="onCountdownModifyButtons"
        android:background="@null"
        android:layout_marginTop="5dp"
        android:contentDescription="editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/edit_16px"
        android:scaleType="fitXY" />

    <ImageButton
        android:contentDescription="deleteButton"
        android:onClick="onCountdownModifyButtons"
        android:id="@+id/countdownDelete"
        android:background="@null"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_16px"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/categoryColorView"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="5dp"
        android:layout_below="@id/countdownDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/startAndUntilDateTime"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/countdownDescription"
        android:layout_margin="5dp"
        android:text="@string/node_countdownDateTimeValuesError404"
        android:textSize="15sp" />
</RelativeLayout>