<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/countdownId_0"
    style="@style/countdownNode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_dark_frame"
    android:layout_marginBottom="-10dp"
    android:onClick="onClick">
    <!-- Only add this programmatically: android:tag="COUNTDOWN_0"-->

    <TextView
        android:id="@+id/countdownTitle"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Countdown not found" />

    <!-- IMPORTANT: If you change IDs of those buttons you need to adapt MainActivity.java:onCountdownModifyButtons() method! -->
    <ImageButton
        android:contentDescription="MotivateMeToggle"
        android:onClick="onCountdownModifyButtons"
        android:id="@+id/countdownMotivateMeToggle"
        android:src="@drawable/switchtoggle_16px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/countdownEdit"
        android:onClick="onCountdownModifyButtons"
        android:contentDescription="editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/edit_16px"
        android:scaleType="fitXY" />

    <ImageButton
        android:contentDescription="deleteButton"
        android:onClick="onCountdownModifyButtons"
        android:id="@+id/countdownDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_16px"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/categoryColorView"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="5dp"
        android:layout_below="@id/countdownTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/startAndUntilDateTime"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/countdownTitle"
        android:layout_margin="5dp"
        android:text="01.01.2017 00:00:00 - 31.12.2017 23:59:59"
        android:textSize="15sp" />
</RelativeLayout>