<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/node"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"><!-- TODO: Use swipelayout -->
    <!-- Only add this programmatically: android:tag="COUNTDOWN_0"-->

    <TextView
        android:id="@+id/inappProductTitle"
        style="@style/text"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        android:text="@string/inAppProductsNode_default_title" />
    <TextView
        android:id="@+id/inappProductDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="0dp"
        android:layout_below="@id/inappProductTitle"
        android:text="@string/inAppProductsNode_default_description"/>

    <!-- MinHeight/Width to 1dp so wrap_content works for button because 48dp is min by default! -->
    <Button
        android:id="@+id/inAppProductPrice"
        android:text="@string/inAppProductsNode_default_price"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorLightdark"
        android:padding="5dp"
        android:minHeight="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/inappProductDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--<TextView
        android:id="@+id/inappProductStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inAppProductsNode_default_status"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/inappProductDescription"/>-->


</RelativeLayout>