<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- MainPage - CountdownList MainActivity -->
    <style name="page">
        <item name="android:textColor">@color/dark</item>
        <item name="android:background">@color/colorAccentLight</item>
    </style>
    <style name="heading" parent="page">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <style name="countdownNode" parent="page">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@color/slightlygrey</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="inappProductNode" parent="page">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@color/slightlygrey</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- COUNTDOWN VIEW -->
    <style name="ContentMain">
        <item name="android:background">@color/light</item>
    </style>

    <style name="Countdown">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CountdownSmall">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Modify Countdown Styles -->
    <style name="textForForm"><!-- If you place here a textcolor the disabled spinner and corr. textview will be always that way colored!! -->
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Loading screen -->
    <style name="loadingText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/slightlygrey</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/loadingscreen</item>
    </style>

    <!-- Setting activity -->
    <style name="settingText">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
