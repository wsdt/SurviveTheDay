<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/defaultActionbar</item>
    </style>

    <style name="defaultActionbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- MainPage - CountdownList MainActivity -->
    <style name="page">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:background">@color/colorLight</item>
    </style>
    <style name="heading" parent="page">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="node" parent="page">
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/colorSlightlygrey</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- COUNTDOWN VIEW -->
    <style name="ContentMain">
        <item name="android:background">@color/colorLight</item>
    </style>

    <style name="Countdown">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CountdownSmall">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CountdownDetails">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Modify Countdown Styles -->
    <style name="textForForm"><!-- If you place here a textcolor the disabled spinner and corr. textview will be always that way colored!! -->
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Custom Views -->
    <!-- customEdittext: This edittext does not allow enter! [combine with CustomEdittext.java! ] -->
    <style name="customEdittext" parent="textForForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text|textAutoComplete|textAutoCorrect</item>
        <item name="android:autoText">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item><!-- seems to be (e.g ...) when text too long for field -->
        <!--<item name="android:drawablePadding">10dp</item>
        TODO: <item name="android:background">@drawable/customedittext</item>
        <item name="android:drawableLeft">@drawable/folder_full</item>
        <item name="android:drawableRight">@drawable/search</item>
        <item name="android:paddingLeft">15dp</item>-->
        <item name="android:hint">@string/customEdittext_default_hint</item>

    </style>

    <!-- Loading screen -->
    <style name="loadingText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorSlightlygrey</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/loadingscreen</item>
        <!-- Following params are to make it to a fullscreen activity [because this theme is
        used to display interstitial ads which can only be done in fullscreen at the newest API!] -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- Works, but by obligatoric Theme.AppCompat colors are different etc. -->
    <style name="SplashThemeWithActionBar" parent="AppTheme">
        <item name="android:windowBackground">@drawable/loadingscreen</item>
    </style>

    <!-- Setting activity -->
    <style name="settingText">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
