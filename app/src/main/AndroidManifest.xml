<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kevkevin.wsdt.tagueberstehen">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CountdownActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreditsActivity"
            android:label="@string/title_activity_credits"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".classes.NotificationService"
            android:exported="false"
            android:label="@string/app_name"
            android:process=":remote"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name=".classes.NotificationService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <!--
            <service
            android:name=".old_CountdownService"
            android:process=":SurviveTheDayCountdownService"
            android:stopWithTask="false"
            android:exported="false"/>
        -->
        <activity android:name=".ModifyCountdownActivity"></activity>
    </application>

</manifest>