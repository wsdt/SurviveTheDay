<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/colorGrey_aaa"
                android:startColor="@color/colorGrey_666" />
            <padding
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="1px">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/colorPrimaryDark"
                android:startColor="@color/colorPrimaryDark" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="10dp"
                android:top="5dp" />
        </shape>

    </item>
</layer-list>